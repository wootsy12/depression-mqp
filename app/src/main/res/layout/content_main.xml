<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    tools:context="com.example.alex.datascraper.MainActivity"
    tools:showIn="@layout/activity_main">

    <EditText
        android:id="@+id/twitterText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/twitterLabel"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/twitterLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/twitterText"
        android:layout_below="@+id/textView2"
        android:text="Twitter Username:" />

    <Button
        android:id="@+id/submitSM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        android:text="Submit"
        android:layout_below="@+id/twitterText"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="24dp"
        android:text="Please enter your username for the following social media sites:" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:text="By providing us your usernames you are giving us permission to anonymously collect your posts on these sites."
        android:layout_below="@+id/twitterText"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/InstaButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/submitSM"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="62dp"
        android:text="Allow us to view your Instagram page" />

</RelativeLayout>